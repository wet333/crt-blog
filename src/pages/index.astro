---
import BaseLayout from '../layouts/BaseLayout.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import PostCard from '../components/PostCard.astro';
import Link from '../components/Link.astro';
import AmberImg from '../components/AmberImg.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
    (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
---

<BaseLayout>
    <Nav />
    <main class="flex flex-wrap gap-5">

        <section class="grow-6 shrink basis-0">
            {posts.map((post, i) => (
                <PostCard
                    title={post.data.title}
                    date={post.data.date}
                    category={post.data.category}
                    description={post.data.description}
                    slug={post.id}
                    isLatest={i === 0}
                />
            ))}
        </section>

        <aside class="grow shrink basis-[250px]">
            <section class="border-terminal p-4 mb-5">
                <h3 class="mt-0 p-1 font-bold negative-color">Estado del servidor</h3>
                <AmberImg 
                    class="my-4" 
                    src="https://images.unsplash.com/photo-1506399558188-acca6f8cbf41?q=80&w=1873&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" 
                    alt="Server" 
                />
                <ul>
                    <li>Uptime: 4503 días</li>
                    <li>Temp: 34°C</li>
                    <li>Cores: active</li>
                </ul>
            </section>

            <section class="border-terminal p-4 mb-5">
                <h3 class="mt-0 p-1 font-bold negative-color">Blog</h3>
                <ul class="list-none p-0">
                    {posts.map((post, i) => (
                        <li>
                            <Link href={`/blog/${post.id}`} command={`cat ~/blog/${post.id}`}>
                                {post.data.title}{i === 0 ? ' (último)' : ''}
                            </Link>
                        </li>
                    ))}
                </ul>
            </section>
        </aside>
    </main>

    <Footer />
</BaseLayout>
